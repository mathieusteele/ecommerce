<body>

    <%- include('../includes/nav.ejs') %>


   <% if (products.length > 0) { %> There are <%= products.length
        %> books:

        <ul>
          <% for (let product of products) { %>
          <li>
            <%= product.title %> by <%= product.author %>
            <a
              href="/admin/edit-product?title=<%= product.title %>&author=<%= product.author %>"
              >Edit</a
            >
            <a
              href="/admin/remove-product?title=<%= product.title %>&author=<%= product.author %>"
              >Delete</a
            >
          </li>
          <% } %>
        </ul>

        <% } else { %> There are NO books. You can be the first! <% } %>

        <a href="/admin/add-product">Add a book</a>

    <%- include('../includes/end.ejs') %>

